{%  extends "layout.twig" %}

{% block content %}
    <div class="row">
        <h1>Jobs</h1>
        <table>
            <tr>
                <th>Job title</th>
                <th>Delete</th>
            </tr>
            {% for job in jobs %}
                <tr>
                    <td>{{ job.title }}</td>
                    <td><a href="/primer-proyecto-php/jobs/delete?id={{ job.id }}">Delete</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{%  endblock %}